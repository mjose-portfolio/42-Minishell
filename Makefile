#		BUILTIN ECHO		#

SRC_CORE_B_ECHO_NAME = exec.c
SRC_CORE_DISP_B_ECHO_NAME = display.c
SRC_CORE_DISP_CHKS_B_ECHO_NAME =

all: $(NAME)

$(NAME): lib core b_ENV b_CD b_SETENV b_UNSETENV b_ECHO b_core $(OBJ)
	@$(CC) -o $(NAME) \
	$(OBJ) \
	$(OBJ_CORE_SHELL) \
	$(OBJ_CORE_ENV_CHKS_SHELL) \
	$(OBJ_CORE_ENV_TOOLS_SHELL) \
	$(OBJ_CORE_ENV_SHELL) \
	$(OBJ_CORE_COMM_SHELL) \
	$(OBJ_CORE_DISP_SHELL) \
	$(OBJ_CORE_TOOLS_SHELL) \
	$(OBJ_CORE_BUILTINS) \
	$(OBJ_CORE_ENVI_CHKS_B_ENV) \
	$(OBJ_CORE_ENVI_TOOLS_B_ENV) \
	$(OBJ_CORE_ENVI_B_ENV) \
	$(OBJ_CORE_DISP_B_ENV) \
	$(OBJ_CORE_B_ENV) \
	$(OBJ_CORE_DISP_B_CD) \
	$(OBJ_CORE_B_CD) \
	$(OBJ_CORE_DISP_B_SETENV) \
	$(OBJ_CORE_CHKS_B_SETENV) \
	$(OBJ_CORE_ENVI_TOOLS_B_SETENV) \
	$(OBJ_CORE_B_SETENV) \
	$(OBJ_CORE_DISP_B_UNSETENV) \
	$(OBJ_CORE_ENVI_TOOLS_B_UNSETENV) \
	$(OBJ_CORE_B_UNSETENV) \
	$(OBJ_CORE_DISP_CHKS_B_ECHO) \
	$(OBJ_CORE_DISP_B_ECHO) \
	$(OBJ_CORE_B_ECHO) \
	$(CC_FLAGS) -L $(LIB_PATH) -lft
	@echo "$(WAC)MINISHELL STATUS:\t\t$(OKC)Ready$(NOC)"
	@echo ===============MINISHELL===============
lib:
	@make -C $(LIB_PATH)
	@echo ===============MINISHELL===============

#		SHELL		#

core_env_tools: $(OBJ_CORE_ENV_TOOLS_SHELL)
	
$(PATH_OBJ_CORE_ENV_TOOLS_SHELL)%.o: $(PATH_SRC_CORE_ENV_TOOLS_SHELL)%.c)
	@echo "$(CLEAR_LINE)$(WAC)ENVIRONMENT BINARIES:\t\t\t$(NOC)Making binary...\t$(OKC)$@$(NOC)$(BEGIN_LINE)"
	@$(CC) -o $@ -c $< $(CC_FLAGS) -I $(INC_PATH) -I $(LIB_INC_PATH)
	@echo "$(CLEAR_LINE)$(WAC)ENVIRONMENT BINARIES:\t\t\t$(OKC)Ready$(NOC)$(BEGIN_LINE)"

core_env_chks: $(OBJ_CORE_ENV_CHKS_SHELL)
	
$(PATH_OBJ_CORE_ENV_CHKS_SHELL)%.o: $(PATH_SRC_CORE_ENV_CHKS_SHELL)%.c)
	@echo "$(CLEAR_LINE)$(WAC)ENVIRONMENT BINARIES:\t\t\t$(NOC)Making binary...\t$(OKC)$@$(NOC)$(BEGIN_LINE)"
	@$(CC) -o $@ -c $< $(CC_FLAGS) -I $(INC_PATH) -I $(LIB_INC_PATH)
