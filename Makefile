$(OBJ_PATH)%.o: $(SRC_PATH)%.c
	@mkdir -p $(OBJ_PATH)
	@$(CC) -o $@ -c $< $(CC_FLAGS) -I $(INC_PATH) -I $(LIB_INC_PATH)

clean:
	@rm -rf $(OBJ_PATH)
	@echo "$(WAC)MINISHELL:\t\t\t$(ERC)Binaries folder removed.$(NOC)"

fclean: clean
	@make -C $(LIB_PATH) fclean
	@rm -rf $(NAME)
	@echo "$(WAC)MINISHELL:\t\t\t$(ERC)Executable removed.$(NOC)"

re: fclean all
